<!DOCTYPE module SYSTEM "module.dtd">

<module name="imu_sfc">
  <doc>
    <description>
      Builtin IMU on SimpleFC.
      - Accelerometer/Gyroscope: ICM20689 via SPI
      - Magnetometer: MAG3110 via I2C
    </description>
    <configure name="IMU_SFC_SPI_DEV" value="spi1" description="SPI device to use for accel"/>
    <configure name="IMU_SFC_SPI_SLAVE_IDX" value="SPI_SLAVE1" description="slave index of the accel CS pin"/>
    <define name="IMU_SFC_DISABLE_MAG" value="FALSE" description="set to TRUE to disable the mag"/>
    <section name="IMU" prefix="IMU_">
      <define name="MAG_X_NEUTRAL" value="2358"/>
      <define name="MAG_Y_NEUTRAL" value="2362"/>
      <define name="MAG_Z_NEUTRAL" value="2119"/>

      <define name="MAG_X_SENS" value="3.4936416" integer="16"/>
      <define name="MAG_Y_SENS" value="3.607713" integer="16"/>
      <define name="MAG_Z_SENS" value="4.90788848" integer="16"/>
    </section>
  </doc>
  <autoload name="imu_common"/>
  <autoload name="imu_nps"/>
  <header>
    <file name="imu_sfc.h" dir="subsystems/imu"/>
  </header>
  <init fun="imu_sfc_init()"/>
  <periodic fun="imu_sfc_periodic()"/>
  <event fun="imu_sfc_event()"/>
  <makefile target="!sim|nps|fbw|hitl">
    <configure name="IMU_SFC_SPI_DEV" default="spi1" case="lower|upper"/>
    <configure name="IMU_SFC_SPI_SLAVE_IDX" default="SPI_SLAVE1"/>

    <define name="IMU_SFC_SPI_DEV" value="$(IMU_SFC_SPI_DEV_LOWER)"/>
    <define name="USE_$(IMU_SFC_SPI_DEV_UPPER)"/>
    <define name="IMU_SFC_SPI_SLAVE_IDX" value="$(IMU_SFC_SPI_SLAVE_IDX)"/>
    <define name="USE_$(IMU_SFC_SPI_SLAVE_IDX)"/>
    <define name="IMU_TYPE_H" value="subsystems/imu/imu_sfc.h" type="string"/>

    <file name="mpu60x0.c" dir="peripherals"/>
    <file name="mpu60x0_spi.c" dir="peripherals"/>
    <file name="mag3110.c" dir="peripherals"/>
    <file name="imu_sfc.c" dir="subsystems/imu"/>
    <raw>
      include $(CFG_SHARED)/spi_master.makefile
    </raw>
  </makefile>
</module>
